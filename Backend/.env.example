# Environment Configuration
NODE_ENV=production

# Server Configuration
PORT=5000

# Database Configuration
# For MongoDB Atlas (recommended for production)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/income_expenditure_system?retryWrites=true&w=majority

# For local MongoDB (development only)
# MONGODB_URI=mongodb://localhost:27017/income_expenditure_system

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here-minimum-32-characters
JWT_EXPIRE=30d

# CORS Configuration (update with your production domain)
CORS_ORIGIN=https://your-frontend-domain.com

# SSL Configuration (if using HTTPS)
SSL_CERT_PATH=/path/to/ssl/certificate.pem
SSL_KEY_PATH=/path/to/ssl/private-key.pem

# Logging
LOG_LEVEL=info

# Rate Limiting (requests per window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload (if implementing file uploads)
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@yourdomain.com

# Error Reporting (Sentry or similar)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Analytics (optional)
ANALYTICS_ID=your-analytics-id