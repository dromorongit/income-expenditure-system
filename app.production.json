{
  "expo": {
    "name": "Income-Expenditure-System",
    "slug": "Income-Expenditure-System",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.techmaven.incomeexpenditure"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.techmaven.incomeexpenditure",
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro",
      "build": {
        "babel": {
          "include": ["@expo"]
        }
      }
    },
    "extra": {
      "apiUrl": "https://income-expenditure-system-production.up.railway.app/api/v1",
      "environment": "production",
      "enableLogging": false,
      "enableErrorReporting": true
    },
    "plugins": [
      [
        "expo-build-properties",
        {
          "android": {
            "enableProguardInReleaseBuilds": true,
            "enableShrinkResourcesInReleaseBuilds": true
          },
          "ios": {
            "useFrameworks": "static"
          }
        }
      ]
    ],
    "optimization": {
      "bundle": true,
      "minify": true,
      "treeShake": true
    }
  }
}